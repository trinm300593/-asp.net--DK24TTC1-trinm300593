@model BubbleTeaCafe.Models.Order

@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <div class="success-icon mb-4">
                    <i class="fas fa-check-circle fa-5x text-success"></i>
                </div>
                <h1 class="display-4 text-success mb-3">Đặt hàng thành công!</h1>
                <p class="lead">Cảm ơn bạn đã đặt hàng tại Bubble Tea & Coffee Shop</p>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>Thông tin đơn hàng #@Model.OrderId
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Khách hàng:</strong> @Model.CustomerName<br>
                            <strong>Số điện thoại:</strong> @Model.CustomerPhone<br>
                            @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                            {
                                <strong>Email:</strong> @Model.CustomerEmail<br>
                            }
                        </div>
                        <div class="col-md-6">
                            <strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")<br>
                            <strong>Hình thức:</strong> 
                            @if (Model.OrderType == "Delivery")
                            {
                                <span><i class="fas fa-truck me-1"></i>Giao hàng</span>
                            }
                            else
                            {
                                <span><i class="fas fa-store me-1"></i>Lấy tại cửa hàng</span>
                            }
                            <br>
                            <strong>Trạng thái:</strong> 
                            <span class="badge bg-warning">Đang xử lý</span>
                        </div>
                    </div>

                    @if (Model.OrderType == "Delivery" && !string.IsNullOrEmpty(Model.DeliveryAddress))
                    {
                        <div class="mb-3">
                            <strong>Địa chỉ giao hàng:</strong><br>
                            @Model.DeliveryAddress
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <strong>Ghi chú:</strong><br>
                            @Model.Notes
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Chi tiết đơn hàng</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                            <div>
                                <h6 class="mb-1">@item.Product?.Name</h6>
                                <div class="text-muted small">
                                    @if (!string.IsNullOrEmpty(item.Size))
                                    {
                                        <span class="me-2">Size @item.Size</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Temperature))
                                    {
                                        <span class="me-2">@item.Temperature</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Sweetness))
                                    {
                                        <span>@item.Sweetness</span>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(item.SpecialInstructions))
                                {
                                    <div class="text-muted small">
                                        <i class="fas fa-sticky-note me-1"></i>@item.SpecialInstructions
                                    </div>
                                }
                                <div class="small">
                                    <strong>Số lượng:</strong> @item.Quantity
                                </div>
                            </div>
                            <div class="text-end">
                                <div>@item.UnitPrice.ToString("N0")đ x @item.Quantity</div>
                                <div class="fw-bold">@((item.UnitPrice * item.Quantity).ToString("N0"))đ</div>
                            </div>
                        </div>
                    }
                    
                    <div class="d-flex justify-content-between">
                        <strong class="fs-5">Tổng cộng:</strong>
                        <strong class="fs-5 text-success">@Model.TotalAmount.ToString("N0")đ</strong>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle me-2"></i>Thông tin quan trọng:</h6>
                <ul class="mb-0">
                    <li>Chúng tôi sẽ liên hệ với bạn trong vòng 5-10 phút để xác nhận đơn hàng</li>
                    <li>Thời gian chuẩn bị: 15-20 phút</li>
                    @if (Model.OrderType == "Delivery")
                    {
                        <li>Thời gian giao hàng: 30-45 phút kể từ khi xác nhận</li>
                        <li>Phí giao hàng: Miễn phí trong bán kính 5km</li>
                    }
                    else
                    {
                        <li>Bạn có thể đến lấy hàng sau 20-25 phút</li>
                        <li>Địa chỉ cửa hàng: 123 Đường ABC, Quận XYZ, TP.HCM</li>
                    }
                    <li>Thanh toán: Tiền mặt khi nhận hàng</li>
                </ul>
            </div>

            <div class="text-center">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-home me-2"></i>Về trang chủ
                </a>
                <a href="@Url.Action("Menu", "Product")" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-utensils me-2"></i>Đặt thêm món khác
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .success-icon {
        animation: bounce 1s ease-in-out;
    }
    
    @@keyframes bounce {
        0%, 20%, 60%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-20px);
        }
        80% {
            transform: translateY(-10px);
        }
    }
</style>